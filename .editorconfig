root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{toml,cfg,ini}]
indent_size = 4

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{dockerfile,Dockerfile*}]
indent_size = 2

[*.{html,css,js,ts}]
indent_size = 2

[*.sql]
indent_size = 2